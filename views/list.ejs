<!DOCTYPE html>
<html>
  <head>
    <title>Item List</title>
    <% if (process.env.SUB_APP && process.env.OUTER_APP_DIR) {%>
      <%- include(process.env.OUTER_APP_DIR+'/views/partials/head') %>
    <% } else { %>
      <% include partials/head %>
    <% } %>
  </head>
  <body>
    <% if (process.env.SUB_APP && process.env.OUTER_APP_DIR) {%>
      <%- include(process.env.OUTER_APP_DIR+'/views/partials/nav') %>
    <% } else { %>
      <% include partials/nav %>
    <% } %>

    <div class="container-fluid">

      <% var i = -1; %>
      <% var itemsPerRow = 1; %>
      <% if (listingData.length === 0) { %>
        <p>
          No Results
        </p>
      <% } %>

      <div class="row centered mt mb">
        <ul class="list-group">

      <% listingData.forEach(function(data) { %>
        <li class="list-group-item">
            <div class="row">
                <div class="col-xs-4 col-md-1">
                    <a href="<%= data.link %>"><img src="<%= data.img %>" alt="<%= data.title %>" onError="this.onerror=null;this.src='images/not-found.png';" class="img-responsive" /></div></a>
                <div class="col-xs-8 col-md-11">
                    <div>
                        <a href="<%= data.link %>">
                            <%= data.title %></a>
                        <!-- <div class="mic-info">
                            <a href="#">Search Results</a> on whatever date
                        </div> -->
                    </div>
                    <div class="comment-text">
                        <%= data.info %>
                    </div>
                    <div class="action">
                        <button type="button" class="btn btn-primary btn-xs" title="Price">
                            <span class="glyphicon glyphicon-tags"> $<%= data.price %></span>
                        </button>
                    </div>
                </div>
            </div>
        </li>
      <% }); %>
        </ul>
      </div>
    </div>
    <% if (process.env.SUB_APP && process.env.OUTER_APP_DIR) {%>
      <%- include(process.env.OUTER_APP_DIR+'/views/partials/footer') %>
    <% } else { %>
      <% include partials/footer %>
    <% } %>
  </body>
</html>
