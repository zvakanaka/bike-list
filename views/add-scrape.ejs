<!DOCTYPE html>
<html>
  <head>
    <title>Add Scrape</title>
    <% if (process.env.SUB_APP && process.env.OUTER_APP_DIR) {%>
      <%- include(process.env.OUTER_APP_DIR+'/views/partials/head') %>
    <% } else { %>
      <% include partials/head %>
    <% } %>
  </head>
  <body>
    <% if (process.env.SUB_APP && process.env.OUTER_APP_DIR) {%>
      <%- include(process.env.OUTER_APP_DIR+'/views/partials/nav') %>
    <% } else { %>
      <% include partials/nav %>
    <% } %>

    <div class="container-fluid">
      <div id="form-add-scrape" class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Add new Scrape</h3>
        </div>
        <div class="panel-body">
          <form>
            <div class="hidden form-group">
              <label for="input-name">Scrape Name</label>
              <input type="text" class="form-control" id="input-name" placeholder="e.g. Bikes in Katmandu">
            </div>

            <div class="form-group">
              <label for="input-search-term">Search Term</label>
              <input type="text" class="form-control" id="input-search-term" placeholder="e.g. Snow Bike">
            </div>

            <div class="form-group">
              <label for="select-site">Site</label>
              <select class="form-control" id="select-site">
                <option>KSL</option>
                <option value="kslcars">KSL Autos</option>
                <option>Craigslist</option>
                <option value="craigslistcars">Craigslist Autos</option>
                <option>Howtoterminal</option>
                <option>Shopgoodwill</option>
              </select>
            </div>

            <div class="form-group">
              <label for="select-section">Section</label>
              <select class="form-control" id="select-section">
                <option value="">all</option>
                <option value="sporting Goods">Sporting Goods</option>
                <option value="antiques">Antiques</option>
                <option value="appliances">Appliances</option>
                <option value="arts+crafts">Arts+crafts</option>
                <option value="atvs/utvs/snow">Atvs/utvs/snow</option>
                <option value="auto parts">Auto parts</option>
                <option value="auto wheels &amp; tires">Auto wheels &amp; tires</option>
                <option value="baby+kids">Baby+kids</option>
                <option value="barter">Barter</option>
                <option value="beauty+hlth">Beauty+hlth</option>
                <option value="bike parts">Bike parts</option>
                <option value="bikes">Bikes</option>
                <option value="boat parts">Boat parts</option>
                <option value="boats">Boats</option>
                <option value="books">Books</option>
                <option value="business">Business</option>
                <option data-toggle="collapse" data-target="#car-slects" value="cars+trucks">Cars</option>
                <option value="cds/dvd/vhs">Cds/dvd/vhs</option>
                <option value="cell phones">Cell phones</option>
                <option value="clothes+acc">Clothes+acc</option>
                <option value="collectibles">Collectibles</option>
                <option value="computer parts">Computer parts</option>
                <option value="computers">Computers</option>
                <option value="electronics">Electronics</option>
                <option value="farm+garden">Farm+garden</option>
                <option value="free stuff">Free stuff</option>
                <option value="furniture">Furniture</option>
                <option value="garage sales">Garage sales</option>
                <option value="general">General</option>
                <option value="heavy equipment">Heavy equipment</option>
                <option value="household">Household</option>
                <option value="jewelry">Jewelry</option>
                <option value="materials">Materials</option>
                <option value="motorcycle parts">Motorcycle parts</option>
                <option value="motorcycles">Motorcycles</option>
                <option value="music instr">Music instr</option>
                <option value="photo+video">Photo+video</option>
                <option value="RVs">RVs</option>
                <option value="sporting">Sporting</option>
                <option value="tickets">Tickets</option>
                <option value="tools">Tools</option>
                <option value="toys+games">Toys+games</option>
                <option value="trailers">Trailers</option>
                <option value="video gaming">Video gaming</option>
                <option value="wanted">Wanted</option>
              </select>
            </div>
            <div class="form-group">
              <label class="sr-only" for="input-max-price">Max Amount</label>
              <div class="input-group">
                <div class="input-group-addon">Max Price $</div>
                <input type="text" class="form-control" id="input-max-price" placeholder="e.g. 200">
                <div class="input-group-addon">.00</div>
              </div>
            </div>

            <div class="form-group">
             <label class="sr-only" for="input-zip">Zip</label>
             <div class="input-group">
               <div class="input-group-addon">Zip</div>
               <input type="text" class="form-control" id="input-zip" placeholder="e.g. 84606">
            </div>
          </div>


            <div class="form-group">
             <label class="sr-only" for="input-max-miles">Max Miles from Zip (in miles)</label>
             <div class="input-group">
               <div class="input-group-addon">Max Miles from Zip</div>
               <input type="text" class="form-control" id="input-max-miles" placeholder="e.g. 30">
             </div>
           </div>

           <div  id="car-selects" class="form-group">
            <label class="sr-only" for="input-auto-max-miles">Max Miles on Auto (in miles)</label>
            <div class="input-group">
              <div class="input-group-addon">Max Auto Miles</div>
              <input type="text" class="form-control" id="input-auto-max-miles" placeholder="e.g. 100000">
            </div>
          </div>

            <div class="form-group">
             <label for="input-send-to">Phone Number or Email address</label>
             <input type="email" class="form-control" id="input-send-to" placeholder="e.g. 55555555">
           </div>

           <div class="form-group">
             <label for="select-carrier">Carrier</label>
             <select class="form-control" id="select-carrier">
               <option value="">None (email)</option>
               <option value="@txt.att.net">AT&T</option>
               <option value="@myboostmobile.com">Boost Mobile</option>
               <option value="@mms.mycricket.com">Cricket</option>
               <option value="@text.republicwireless.com">Republic Wireless</option>
               <option value="@messaging.sprintpcs.com">Sprint</option>
               <option value="@tmomail.net">T-Mobile</option>
               <option value="@vtext.com">Verizon</option>
               <option value="@vmobl.com">Virgin</option>
             </select>
           </div>

           <div class="checkbox">
            <label>
              <input checked type="checkbox" id="checkbox-send-message"> Send me messages
            </label>
          </div>
          <button type="button" id="btn-add-scrape" data-loading-text="Please wait..." class="btn btn-default">Add Scrape</button>
          </form>
        </div>
      </div>
    </div>

    <script src="/js/main.js"></script>
    <% if (process.env.SUB_APP && process.env.OUTER_APP_DIR) {%>
      <%- include(process.env.OUTER_APP_DIR+'/views/partials/footer') %>
    <% } else { %>
      <% include partials/footer %>
    <% } %>
  </body>
</html>
