<!DOCTYPE html>
<html>
  <head>
     <% include partials/head %>
  </head>
  <body>
    <% include partials/nav %>
    <div class="container-fluid">

      <% var i = -1; %>
      <% var itemsPerRow = 4; %>
      <% if (listingData.length == 0) { %>
        <p>
          No Results:
          <%= error %>
        </p>
      <% } %>

      <% listingData.forEach(function(data) { %>
        <% i++; %>
        <% if (i%itemsPerRow == 0) { %>
            <div class="row">
        <% } %>
              <div class="craigs-box col-md-<%= 12/itemsPerRow %>">
                <img src="<%= data.img %>" alt="<%= data.title %>" onError="this.onerror=null;this.src='images/not-found.png';">
                <div class="caption">
                  <h4><%= data.title %></h4>
                  <p>$<%= data.price %> <%= data.info %></p>
                  <p><a href="<%= data.link %>" class="btn btn-primary" role="button">Source</a> <a href="<%= data.img %>" class="btn btn-default" role="button">Image</a></p>
                </div>
              </div>
        <% if (i%itemsPerRow == 0) { %>
          </div>
        <% } %>
      <% }); %>
    </div>
    <% include partials/footer %>
  </body>
</html>
